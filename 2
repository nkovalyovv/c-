#include <pch.h>
#include <iostream>
#include <cstdlib> 
using namespace std;


int main()
{
	setlocale(LC_ALL, "Russian");

	float x;
	cout << "Введите ширину: ";
	cin >> x;
	if (x < 0) {
		cout << "Введите положительное число ! \n";
		return 1;
	}

	if (cin.fail())
	{
		cout << "Введите число ! \n";
		return 1;
	}

	float y;
	cout << "Введите высоту: ";
	cin >> y;
	if (x < 0) {
		cout << "Введите положительное число ! \n";
		return 1;
	}

	if (cin.fail())
	{
		cout << "Введите число ! \n";
		return 1;
	}

	float z;
	z = (x + y) * 2;
	cout << "Периметр прямоугольника = " << z << endl;

	float h;
	h = x * y;
	cout << "Площадь прямоугольника = " << h << endl;


	system("pause");
	return 0;
}
