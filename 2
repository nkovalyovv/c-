#include <iostream>
#include <string>
using namespace std;

void cin_fail()
    {
    cin.clear();
    while (cin.get() != '\n' );
    }

int main() {
   int number;
   cout << "Введите четырехзначное число: ";
   cin >> number;

     if (cin.fail()) {
    cout << "Введите число ! \n" << endl;
    cin_fail();
    system("pause"); 
    return 0;
    }

   // Преобразуем число в строку
   string strNum = to_string(number);

   bool isPalindrome = true;
   // Проверяем, равна ли строка себе, читая слева направо и справа налево
   for (int i = 0, j = strNum.size() - 1; i < j; i++, j--) {
      if (strNum[i] != strNum[j]) {
         isPalindrome = false;
         break;
      }
   }

   if (isPalindrome) {
      cout << "true" << endl;
   } else {
      cout << "false" << endl;
   }
system("pause");
   return 0;
}
