#include <stdafx.h>
#include <iostream>
#include <cstdlib> 
using namespace std;

void cin_fail()
{
	cin.clear();
	while (cin.get() != '\n');
}

int main()
{
	setlocale(LC_ALL, "Russian");

	float x;
	cout << "Введите ширину: ";
	cin >> x;

	if (cin.fail())
	{
		cout << "Введите число ! \n" << endl;
		cin_fail();
		return 1;
	}

	float y;
	cout << "Введите высоту: ";
	cin >> y;

	if (cin.fail())
	{
		cout << "Введите число ! \n" << endl;
		cin_fail();
		return 1;
	}

	float z;
	z = (x + y) * 2;
	cout << "Периметр прямоугольника = " << z << endl;

	float h;
	h = x * y;
	cout << "Площадь прямоугольника = " << h << endl;


	system("pause");
	return 0;
}
