#include <iostream>
#include <cstdlib> 
using namespace std;

int main() 
{ 
    setlocale(LC_ALL, "Russian");
    
    float x;
    cout << "Введите ширину: ";
    cin >> x;

    float y;
    cout << "Введите высоту: ";
    cin >> y;

    float z;
    z = (x+y)*2;
    cout << "Периметр прямоугольника = " << z << endl;

    float h;
    h = x*y;
    cout << "Площадь прямоугольника = " << h << endl;


    system("pause"); 
    return 0; 
}
